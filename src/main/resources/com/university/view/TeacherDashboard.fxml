<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" styleClass="root-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.controller.TeacherDashboardController">
    <children>
        <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="630.0" prefWidth="880.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <top>
                <BorderPane BorderPane.alignment="CENTER">
                    <left>
                        <Label styleClass="login-header" text="ClassPilot - Teacher Dashboard" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets bottom="15.0" left="15.0" top="15.0" />
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogoutButtonClick" styleClass="button" text="Logout">
                            <BorderPane.margin>
                                <Insets right="15.0" top="10.0" />
                            </BorderPane.margin>
                        </Button>
                    </right>
                </BorderPane>
            </top>
            <center>
                <TabPane styleClass="tab-pane" BorderPane.alignment="CENTER" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="My Teaching Routine">
                            <content>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <TableView fx:id="teacherRoutineTable" styleClass="table-view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <columns>
                                                <TableColumn fx:id="dayCol" text="Day" />
                                                <TableColumn fx:id="timeCol" text="Time" />
                                                <TableColumn fx:id="subjectCol" text="Subject &amp; Course" />
                                                <TableColumn fx:id="roomCol" text="Room" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Course Chat">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <ComboBox fx:id="chatCourseSelector" maxWidth="1.7976931348623157E308" prefHeight="45.0" promptText="Select Class Group" styleClass="choice-box" />

                                                <TextArea fx:id="chatArea" prefHeight="450.0" styleClass="text-area" VBox.vgrow="ALWAYS" />
                                                <TextField fx:id="messageField" prefHeight="48.0" styleClass="text-input" />
                                                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClick" prefWidth="9999.0" styleClass="button" text="Send Message" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>